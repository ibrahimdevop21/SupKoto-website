{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts", 
    "src/**/*.tsx", 
    "src/**/*.jsx",
    "src/pages/**/*.astro",
    "src/layouts/**/*.astro"
  ],
  "exclude": [
    "dist", 
    "node_modules", 
    "src/components/_deprecated/**/*", 
    "src/components/_deprecated_archive/**/*", 
    "**/node_modules/**"
  ]
}
