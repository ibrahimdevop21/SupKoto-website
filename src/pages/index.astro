---
import Layout from '../layouts/Layout.astro';
import HeroCarousel from '../components/HeroCarousel.astro';
import Partners from '../components/Partners.astro';
import LatestWorkCarousel from '../components/LatestWorkCarousel.astro';
import { t, isRTL, getLocalizedUrl } from '../i18n/utils';
import { getRelativeLocaleUrl } from 'astro:i18n';

const currentLang = Astro.currentLocale || 'en';
const rtl = isRTL(Astro);
---

<Layout title={t('nav.home')}>
	<HeroCarousel slot="hero" />
	<section class="py-12 md:py-16">
		<!-- Partners Section -->
		<Partners />
		
		<!-- Latest Work Section -->
		<div class="mt-16">
			<LatestWorkCarousel />
		</div>
	</section>
</Layout>
