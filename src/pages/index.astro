---
// This page redirects the root path to the default locale using a meta refresh tag,
// which is compatible with static hosting platforms like Netlify and Vercel.
const defaultLocale = 'en';
const redirectUrl = `/${defaultLocale}/`;
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Redirecting...</title>
    <link rel="canonical" href={redirectUrl} />
    <meta http-equiv="refresh" content={`0;url=${redirectUrl}`} />
</head>
<body>
    <h1>Redirecting...</h1>
    <p>If you are not redirected automatically, please <a href={redirectUrl}>click here</a>.</p>
    <script define:vars={{ redirectUrl }}>
        window.location.href = redirectUrl;
    </script>
</body>
</html>
