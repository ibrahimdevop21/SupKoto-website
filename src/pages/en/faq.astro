---
import Layout from '../../layouts/Layout.astro';
import { t } from '../../i18n/index';

// For locale-specific pages, we know the locale from the folder structure
const currentLang = Astro.currentLocale || 'en';
// English is LTR, so rtl is false
const rtl = currentLang === 'ar';
---

<Layout title={t('faq.page_title', {}, Astro)}>
 class="py-12">
class="text-center mb-12">
class="text-4xl md:text-5xl font-bold text-foreground mb-4">{t('faq.heading', {}, Astro)}</h1>
class="text-xl text-muted-foreground max-w-3xl mx-auto">{t('faq.subheading', {}, Astro)}</p>
class="container mx-auto px-4">
class="text-center text-muted-foreground">
.description', {}, Astro)}
>
</Layout>
