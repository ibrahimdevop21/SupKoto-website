---
import Layout from '../../layouts/Layout.astro';
import { t } from '../../i18n/index';

// For locale-specific pages, we know the locale from the folder structure
const currentLang = Astro.currentLocale || 'en';
// English is LTR, so rtl is false
const rtl = currentLang === 'ar';
---

<Layout title={t('contact.page_title', {}, Astro)}>
	<section class="py-12">
		<div class="text-center mb-12">
			<h1 class="text-4xl md:text-5xl font-bold text-foreground mb-4">{t('contact.heading', {}, Astro)}</h1>
			<p class="text-xl text-muted-foreground max-w-3xl mx-auto">{t('contact.subheading', {}, Astro)}</p>
		</div>
		
		<div class="container mx-auto px-4">
			<p class="text-center text-muted-foreground">
				{t('contact.description', {}, Astro)}
			</p>
		</div>
	</section>
</Layout>
