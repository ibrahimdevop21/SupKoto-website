---
import Layout from '../../layouts/Layout.astro';
import { t, isRTL, getLocalizedUrl } from '../../i18n/utils';
import { getRelativeLocaleUrl } from 'astro:i18n';

const currentLang = Astro.currentLocale || 'en';
const rtl = isRTL(Astro);
---

<Layout title={t('nav.home')}>
	<section class="py-12 md:py-16">
		<div class="text-center mb-16">
			<h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-6 leading-tight">{t('hero.welcome')} <span class="text-blue-600">{t('site.title')}</span></h1>
			<p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">{t('hero.tagline')}</p>
		</div>
		
		<!-- Hero Banner -->
		<div class="bg-gradient-to-r from-blue-700 to-blue-500 text-white rounded-xl shadow-xl p-8 md:p-12 mb-16 transform transition-all hover:shadow-2xl">
			<div class="flex flex-col md:flex-row items-center justify-between gap-8 md:gap-12">
				<div class="md:w-1/2 text-center md:text-left mb-8 md:mb-0">
					<h2 class="text-3xl md:text-4xl font-bold mb-6 leading-tight">{t('hero.experience')}</h2>
					<p class="mb-8 max-w-xl text-lg opacity-90 leading-relaxed">{t('hero.description')}</p>
					<div class="flex flex-wrap justify-center md:justify-start gap-5">
						<a href={getRelativeLocaleUrl(currentLang, 'services')} class="bg-white text-blue-600 hover:bg-gray-100 px-7 py-3.5 rounded-md font-medium transition-all duration-300 shadow-md hover:shadow-lg transform hover:-translate-y-0.5">{t('hero.services')}</a>
						<a href={getRelativeLocaleUrl(currentLang, 'contact')} class="bg-transparent hover:bg-blue-700 border-2 border-white px-7 py-3.5 rounded-md font-medium transition-all duration-300 hover:shadow-lg">{t('hero.contact')}</a>
					</div>
				</div>
				<div class="md:w-1/2 flex justify-center">
					<img src="/assets/logo.svg" alt="Supakoto Logo" class="w-full max-w-md transform transition-all duration-500 hover:scale-105" width="400" height="172" />
				</div>
			</div>
		</div>
		
		<!-- Featured Sections -->
		<div class="grid grid-cols-1 md:grid-cols-3 gap-8 lg:gap-10 mb-16">
			<!-- Feature 1 -->
			<div class="bg-white p-8 rounded-xl shadow-md hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 border border-gray-100">
				<h3 class="text-xl font-semibold mb-4 text-gray-900">{t('features.premium.title')}</h3>
				<p class="text-gray-600 mb-5 leading-relaxed">{t('features.premium.description')}</p>
				<a href={getRelativeLocaleUrl(currentLang, 'services')} class="text-blue-600 hover:text-blue-800 font-medium inline-flex items-center group">
					{t('features.premium.link')} 
					<span class="transform transition-transform duration-300 group-hover:translate-x-1 rtl:group-hover:-translate-x-1 rtl:group-hover:translate-x-0 ml-1 rtl:mr-1 rtl:ml-0">
						{rtl ? '←' : '→'}
					</span>
				</a>
			</div>
			
			<!-- Feature 2 -->
			<div class="bg-white p-8 rounded-xl shadow-md hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 border border-gray-100">
				<h3 class="text-xl font-semibold mb-4 text-gray-900">{t('features.locations.title')}</h3>
				<p class="text-gray-600 mb-5 leading-relaxed">{t('features.locations.description')}</p>
				<a href={getRelativeLocaleUrl(currentLang, 'locations')} class="text-blue-600 hover:text-blue-800 font-medium inline-flex items-center group">
					{t('features.locations.link')} 
					<span class="transform transition-transform duration-300 group-hover:translate-x-1 rtl:group-hover:-translate-x-1 rtl:group-hover:translate-x-0 ml-1 rtl:mr-1 rtl:ml-0">
						{rtl ? '←' : '→'}
					</span>
				</a>
			</div>
			
			<!-- Feature 3 -->
			<div class="bg-white p-8 rounded-xl shadow-md hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 border border-gray-100">
				<h3 class="text-xl font-semibold mb-4 text-gray-900">{t('features.offers.title')}</h3>
				<p class="text-gray-600 mb-5 leading-relaxed">{t('features.offers.description')}</p>
				<a href={getRelativeLocaleUrl(currentLang, 'offers')} class="text-blue-600 hover:text-blue-800 font-medium inline-flex items-center group">
					{t('features.offers.link')} 
					<span class="transform transition-transform duration-300 group-hover:translate-x-1 rtl:group-hover:-translate-x-1 rtl:group-hover:translate-x-0 ml-1 rtl:mr-1 rtl:ml-0">
						{rtl ? '←' : '→'}
					</span>
				</a>
			</div>
		</div>
		
		<!-- Call to Action -->
		<div class="bg-gradient-to-r from-gray-900 to-gray-800 text-white rounded-xl p-10 text-center shadow-lg">
			<h2 class="text-3xl font-bold mb-6">{t('cta.title')}</h2>
			<p class="mb-8 max-w-2xl mx-auto text-gray-300 text-lg">{t('cta.description')}</p>
			<div class="flex flex-wrap justify-center gap-4">
				<a href={getRelativeLocaleUrl(currentLang, 'contact')} class="bg-blue-600 hover:bg-blue-700 text-white px-8 py-4 rounded-md font-medium transition-all duration-300 shadow-md hover:shadow-xl transform hover:-translate-y-0.5">{t('cta.enquire')}</a>
				<a href="https://wa.me/1234567890" class="bg-green-600 hover:bg-green-700 text-white px-8 py-4 rounded-md font-medium transition-all duration-300 shadow-md hover:shadow-xl transform hover:-translate-y-0.5 flex items-center">
					<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 rtl:ml-2 rtl:mr-0" fill="currentColor" viewBox="0 0 24 24">
						<path d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.462-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51l-.57-.01c-.198 0-.52.074-.792.372s-1.04 1.016-1.04 2.479 1.065 2.876 1.213 3.074c.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414z"/>
					</svg>
					{t('cta.whatsapp')}
				</a>
			</div>
		</div>
	</section>
</Layout>
