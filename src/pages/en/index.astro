---
import Layout from '../../layouts/Layout.astro';
import HeroCarousel from '../../components/HeroCarousel.astro';
import Partners from '../../components/Partners.astro';
import LatestWorkCarousel from '../../components/LatestWorkCarousel.astro';
import Testimonials from '../../components/Testimonials.astro';
import { t } from '../../i18n/index';

// We can now use Astro's built-in i18n system
const currentLang = Astro.currentLocale || 'en';
// English is LTR, so rtl is false
const rtl = currentLang === 'ar';
---

<Layout title={t('pages.home.title')}>
	<HeroCarousel slot="hero" />
	
	<!-- Main content with consistent spacing -->
	<section class="py-16 md:py-20 lg:py-24">
		<!-- Partners Section with proper spacing -->
		<div class="mb-24 md:mb-32">
			<Partners />
		</div>
		
		<!-- Latest Work Section with proper spacing -->
		<div class="mb-24 md:mb-32">
			<LatestWorkCarousel client:visible />
		</div>
		
		<!-- Testimonials Section -->
		<div>
			<Testimonials client:visible />
		</div>
	</section>
</Layout>
