---
import Layout from '../../layouts/Layout.astro';
import { t } from '../../i18n/index';

// For locale-specific pages, we know the locale from the folder structure
const currentLang = Astro.currentLocale || 'en';
---

<Layout title={t('about.page_title', {}, { currentLocale: currentLang })}>
  <main class="py-12">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold text-foreground mb-4">
          {t('about.heading', {}, { currentLocale: currentLang })}
        </h1>
        <p class="text-xl text-muted-foreground max-w-3xl mx-auto">
          {t('about.subheading', {}, { currentLocale: currentLang })}
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 gap-12 items-center mb-16">
        <div>
          <h2 class="text-3xl font-bold mb-6">
            {t('about.our_story', {}, { currentLocale: currentLang })}
          </h2>
          <p class="text-muted-foreground mb-4">
            {t('about.story_content', {}, { currentLocale: currentLang })}
          </p>
        </div>
        <div class="relative">
          <img 
            src="/images/about-hero.jpg" 
            alt="About Supakoto" 
            class="rounded-lg shadow-lg w-full h-auto"
          />
        </div>
      </div>
      
      <div class="grid md:grid-cols-2 gap-12 mb-16">
        <div>
          <h3 class="text-2xl font-bold mb-4">
            {t('about.mission', {}, { currentLocale: currentLang })}
          </h3>
          <p class="text-muted-foreground">
            {t('about.mission_content', {}, { currentLocale: currentLang })}
          </p>
        </div>
        <div>
          <h3 class="text-2xl font-bold mb-4">
            {t('about.values', {}, { currentLocale: currentLang })}
          </h3>
          <p class="text-muted-foreground">
            {t('about.values_content', {}, { currentLocale: currentLang })}
          </p>
        </div>
      </div>
      
      <div class="text-center">
        <p class="text-muted-foreground">
          {t('about.description', {}, { currentLocale: currentLang })}
        </p>
      </div>
    </div>
  </main>
</Layout>
