---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Services">
	<section class="py-12">
		<div class="text-center mb-12">
			<h1 class="text-4xl md:text-5xl font-bold text-foreground mb-4">Our Services</h1>
			<p class="text-xl text-muted-foreground max-w-3xl mx-auto">Discover our comprehensive range of professional services</p>
		</div>
		
		<!-- Services Overview -->
		<div class="bg-card rounded-lg shadow-md p-8 mb-12">
			<h2 class="text-3xl font-bold mb-6 text-primary">How We Can Help You</h2>
			<p class="text-muted-foreground mb-6">
				At Supakoto, we offer a wide range of services designed to meet your specific needs. Our team of experts is dedicated to delivering exceptional results with every project.
			</p>
		</div>
		
		<!-- Services Grid -->
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
			<!-- Service 1 -->
			<div class="bg-card p-6 rounded-lg shadow-md">
				<div class="bg-primary/10 text-primary p-3 rounded-full w-12 h-12 flex items-center justify-center mb-4">
					<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
						<path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
					</svg>
				</div>
				<h3 class="text-xl font-semibold mb-3 text-card-foreground">Service One</h3>
				<p class="text-muted-foreground mb-4">Detailed description of the first service offering and how it benefits clients.</p>
				<a href="/services/service-one" class="text-primary hover:text-primary/80 font-medium">Learn more →</a>
			</div>
			
			<!-- Service 2 -->
			<div class="bg-card p-6 rounded-lg shadow-md">
				<div class="bg-primary/10 text-primary p-3 rounded-full w-12 h-12 flex items-center justify-center mb-4">
