---
import Layout from '../../layouts/Layout.astro';
import ContactHero from '../../components/contact/ContactHero.tsx';
import BranchLocator from '../../components/contact/BranchLocator.tsx';
import B2BForm from '../../components/contact/B2BForm.tsx';
import { t } from '../../i18n/index.ts';

const lang = Astro.currentLocale || 'ar';
const currentLang = lang;
const rtl = true;
---

<Layout title={t('pages.contact.title')} description={t('pages.contact.description')}>
    <ContactHero client:visible currentLocale={currentLang} isRTL={rtl} />
    <BranchLocator client:only="react" currentLocale={currentLang} isRTL={rtl} />
    <B2BForm client:visible currentLocale={currentLang} isRTL={rtl} />
</Layout>
