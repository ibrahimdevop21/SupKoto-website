---
import Layout from '../../layouts/Layout.astro';
import { t, isRTL, getLocalizedUrl } from '../../i18n/utils';
import { getRelativeLocaleUrl } from 'astro:i18n';

const currentLang = Astro.currentLocale || 'ar';
const rtl = isRTL(Astro);

// Placeholder location data
const locations = [
  {
    id: 1,
    name: "المقر الرئيسي - دبي",
    address: "شارع الشيخ زايد، برج المركز المالي، دبي، الإمارات العربية المتحدة",
    phone: "+971 4 123 4567",
    email: "dubai@supakoto.com",
    hours: "الأحد - الخميس: ٩:٠٠ ص - ٦:٠٠ م",
    description: "مقرنا الرئيسي الذي يقدم مجموعة كاملة من خدماتنا المتميزة."
  },
  {
    id: 2,
    name: "فرع أبوظبي",
    address: "شارع الكورنيش، برج الاتحاد، أبوظبي، الإمارات العربية المتحدة",
    phone: "+971 2 234 5678",
    email: "abudhabi@supakoto.com",
    hours: "الأحد - الخميس: ٨:٠٠ ص - ٧:٠٠ م، السبت: ١٠:٠٠ ص - ٤:٠٠ م",
    description: "موقع مريح يخدم منطقة أبوظبي بأحدث التقنيات والخدمات."
  },
  {
    id: 3,
    name: "فرع الشارقة",
    address: "شارع الوحدة، مجمع الزاهية، الشارقة، الإمارات العربية المتحدة",
    phone: "+971 6 345 6789",
    email: "sharjah@supakoto.com",
    hours: "الأحد - الخميس: ٩:٠٠ ص - ٦:٠٠ م، السبت: ١٠:٠٠ ص - ٤:٠٠ م",
    description: "أحدث فروعنا مع مرافق متطورة ومعدات حديثة."
  },
  {
    id: 4,
    name: "فرع القاهرة",
    address: "شارع التسعين، التجمع الخامس، القاهرة الجديدة، مصر",
    phone: "+20 2 456 7890",
    email: "cairo@supakoto.com",
    hours: "الأحد - الخميس: ٨:٣٠ ص - ٥:٣٠ م",
    description: "نخدم عملاءنا في مصر بنفس مستوى الجودة والتميز."
  }
];
---

<Layout title={t('nav.locations', { default: 'فروعنا' })}>
	<section class="py-12">
		<div class="text-center mb-12">
			<h1 class="text-4xl md:text-5xl font-bold text-foreground mb-4">{t('nav.locations', { default: 'فروعنا' })}</h1>
			<p class="text-xl text-muted-foreground max-w-3xl mx-auto">اعثروا على أقرب فرع لسوباكوتو إليكم</p>
		</div>
		
		<!-- Locations Overview -->
		<div class="bg-card rounded-lg shadow-md p-8 mb-12">
			<h2 class="text-3xl font-bold mb-6 text-primary">زوروا فروعنا</h2>
			<p class="text-muted-foreground mb-6">
				مع وجود فروع متعددة في جميع أنحاء المنطقة، نجعل من السهل عليكم الوصول إلى خدماتنا. يقدم كل فرع من فروعنا نفس مستوى الخدمة عالية الجودة والخبرة التي تتوقعونها من سوباكوتو.
			</p>
		</div>
		
		<!-- Map Placeholder -->
		<div class="bg-muted h-96 rounded-lg mb-12 flex items-center justify-center">
			<div class="text-center">
				<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-16 h-16 mx-auto text-muted-foreground mb-4">
					<path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
					<path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
				</svg>
				<p class="text-muted-foreground font-medium">الخريطة التفاعلية قريباً</p>
				<p class="text-muted-foreground/70 text-sm">اعثروا على فروعنا بسهولة باستخدام الخريطة التفاعلية</p>
			</div>
		</div>
		
		<!-- Locations Grid -->
		<div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
			{locations.map(location => (
				<div class="bg-card p-6 rounded-lg shadow-md">
					<h3 class="text-2xl font-semibold mb-3 text-primary">{location.name}</h3>
					
					<div class="mb-4">
						<div class="flex items-start mb-2">
							<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-primary ml-0 mr-2 rtl:ml-2 rtl:mr-0 mt-0.5">
								<path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
								<path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
							</svg>
							<span class="text-card-foreground">{location.address}</span>
						</div>
						
						<div class="flex items-start mb-2">
							<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-primary ml-0 mr-2 rtl:ml-2 rtl:mr-0 mt-0.5">
								<path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
							</svg>
							<span class="text-card-foreground">{location.phone}</span>
						</div>
						
						<div class="flex items-start mb-2">
							<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-primary ml-0 mr-2 rtl:ml-2 rtl:mr-0 mt-0.5">
								<path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
							</svg>
							<span class="text-card-foreground">{location.email}</span>
						</div>
						
						<div class="flex items-start mb-4">
							<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-primary ml-0 mr-2 rtl:ml-2 rtl:mr-0 mt-0.5">
								<path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
							</svg>
							<span class="text-card-foreground">{location.hours}</span>
						</div>
					</div>
					
					<p class="text-muted-foreground mb-4">{location.description}</p>
					
					<div class="flex justify-between items-center">
						<a href={getRelativeLocaleUrl(currentLang, `locations/${location.id}`)} class="text-primary hover:text-primary/80 font-medium">عرض التفاصيل ←</a>
						<a href={getRelativeLocaleUrl(currentLang, 'contact')} class="bg-primary hover:bg-primary/90 text-primary-foreground px-4 py-2 rounded-md text-sm transition-colors">حجز موعد</a>
					</div>
				</div>
			))}
		</div>
		
		<!-- Call to Action -->
		<div class="bg-muted rounded-lg p-8 text-center">
			<h2 class="text-2xl font-bold mb-4 text-foreground">لم تجدوا فرعاً قريباً منكم؟</h2>
			<p class="mb-6 max-w-2xl mx-auto text-muted-foreground">نحن في توسع مستمر! تواصلوا معنا للاستفسار عن خدماتنا المتنقلة أو لاقتراح موقع جديد.</p>
			<a href={getRelativeLocaleUrl(currentLang, 'contact')} class="bg-primary hover:bg-primary/90 text-primary-foreground px-6 py-3 rounded-md font-medium transition-colors">تواصلوا معنا</a>
		</div>
	</section>
</Layout>
