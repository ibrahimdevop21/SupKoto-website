---
import Layout from '../../layouts/Layout.astro';
import { t } from '../../i18n/index';
import CarGallery from '../../components/CarGallery';
import ServiceList from '../../components/ServiceList';
import WhyChooseUs from '../../components/WhyChooseUs';
import OurProcess from '../../components/OurProcess';
import CTA from '../../components/CTA';

// For locale-specific pages, we know the locale from the folder structure
const currentLang = Astro.currentLocale || 'ar';
// Arabic is RTL, so rtl is true
const rtl = currentLang === 'ar';
---

<Layout title={t('pages.services.title')}>
	<section class="py-16 md:py-24 bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(59,130,246,0.15),rgba(255,255,255,0))] min-h-screen">
		<div class="container mx-auto px-4 md:px-8 lg:px-12">
			<ServiceList client:visible currentLocale={currentLang} isRTL={rtl} />
			<CarGallery client:load currentLocale={currentLang} isRTL={rtl} />
			<WhyChooseUs client:visible currentLocale={currentLang} isRTL={rtl} />
			<OurProcess client:visible currentLocale={currentLang} isRTL={rtl} />
			<CTA client:visible currentLocale={currentLang} isRTL={rtl} contactUrl="/ar/contact" />
		</div>
	</section>
</Layout>
