---
import Layout from '../../layouts/Layout.astro';
import { t, isRTL, getLocalizedUrl } from '../../i18n/utils';
import { getRelativeLocaleUrl } from 'astro:i18n';

const currentLang = Astro.currentLocale || 'ar';
const rtl = isRTL(Astro);

// Placeholder offers data
const offers = [
  {
    id: 1,
    title: "عرض الصيف المميز",
    discount: "خصم 20%",
    description: "احصلوا على خصم 20% على جميع خدماتنا المتميزة طوال موسم الصيف.",
    validUntil: "30 سبتمبر 2025",
    code: "SUMMER20"
  },
  {
    id: 2,
    title: "خصم العملاء الجدد",
    discount: "خصم 15%",
    description: "يحصل العملاء الجدد على خصم 15% على حجز الخدمة الأولى.",
    validUntil: "غير محدد",
    code: "NEWCLIENT15"
  },
  {
    id: 3,
    title: "باقة الخدمات المتكاملة",
    discount: "وفر 25%",
    description: "احجزوا أي ثلاث خدمات معاً ووفروا 25% من التكلفة الإجمالية.",
    validUntil: "31 ديسمبر 2025",
    code: "BUNDLE25"
  },
  {
    id: 4,
    title: "مكافأة الإحالة",
    discount: "خصم 10%",
    description: "قم بدعوة صديق واحصلا كلاكما على خصم 10% على الحجز التالي.",
    validUntil: "غير محدد",
    code: "REFERRAL10"
  }
];
---

<Layout title={t('nav.offers', { default: 'العروض الحصرية' })}>
	<section class="py-12">
		<div class="text-center mb-12">
			<h1 class="text-4xl md:text-5xl font-bold text-foreground mb-4">{t('nav.offers', { default: 'العروض الحصرية' })}</h1>
			<p class="text-xl text-muted-foreground max-w-3xl mx-auto">استفيدوا من عروضنا الترويجية والخصومات المحدودة</p>
		</div>
		
		<!-- Offers Overview -->
		<div class="bg-card rounded-lg shadow-md p-8 mb-12">
			<h2 class="text-3xl font-bold mb-6 text-primary">العروض الحالية</h2>
			<p class="text-muted-foreground mb-6">
				في سوباكوتو، نلتزم بتقديم قيمة استثنائية. تعرفوا على عروضنا الحالية أدناه ولا تفوتوا هذه الفرص للتوفير.
			</p>
		</div>
		
		<!-- Featured Offer -->
		<div class="bg-gradient-to-r from-primary to-primary/80 text-primary-foreground rounded-lg p-8 mb-12">
			<div class="md:flex items-center">
				<div class="md:w-2/3 mb-6 md:mb-0 md:pr-8 rtl:md:pr-0 rtl:md:pl-8">
					<span class="inline-block bg-accent text-accent-foreground font-bold px-4 py-1 rounded-full mb-4">عرض مميز</span>
					<h3 class="text-3xl font-bold mb-4">عرض لفترة محدودة</h3>
					<p class="mb-6 text-lg">
						احجزوا أي خدمة متميزة هذا الشهر واحصلوا على جلسة استشارية مجانية بقيمة 550 درهم.
						هذا العرض الحصري متاح لفترة محدودة فقط.
					</p>
					<div class="flex flex-wrap gap-4">
						<a href={getRelativeLocaleUrl(currentLang, 'contact')} class="bg-background text-primary hover:bg-background/90 px-6 py-3 rounded-md font-medium transition-colors">احجز الآن</a>
						<a href={getRelativeLocaleUrl(currentLang, 'services')} class="bg-transparent hover:bg-primary-foreground/10 border border-primary-foreground px-6 py-3 rounded-md font-medium transition-colors">استعراض الخدمات</a>
					</div>
				</div>
				<div class="md:w-1/3 flex justify-center">
					<div class="bg-primary-foreground/20 p-6 rounded-lg text-center">
						<p class="text-sm mb-2">استخدم الرمز</p>
						<p class="text-3xl font-bold mb-2">PREMIUM50</p>
						<p class="text-sm">صالح حتى 31 يوليو 2025</p>
					</div>
				</div>
			</div>
		</div>
		
		<!-- Offers Grid -->
		<div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
			{offers.map(offer => (
				<div class="bg-card p-6 rounded-lg shadow-md border border-border">
					<div class="flex justify-between items-start mb-4">
						<h3 class="text-2xl font-semibold text-primary">{offer.title}</h3>
						<span class="bg-primary/10 text-primary font-bold px-3 py-1 rounded-md">{offer.discount}</span>
					</div>
					
					<p class="text-muted-foreground mb-6">{offer.description}</p>
					
					<div class="bg-muted p-4 rounded-md mb-6">
						<div class="flex justify-between items-center">
							<div>
								<p class="text-sm text-muted-foreground mb-1">رمز الخصم:</p>
								<p class="font-mono font-bold text-lg text-card-foreground">{offer.code}</p>
							</div>
							<button class="text-primary hover:text-primary/80 text-sm font-medium">نسخ الرمز</button>
						</div>
					</div>
					
					<div class="flex justify-between items-center">
						<p class="text-sm text-muted-foreground">صالح حتى: <span class="font-medium text-card-foreground">{offer.validUntil}</span></p>
						<a href={getRelativeLocaleUrl(currentLang, 'contact')} class="bg-primary hover:bg-primary/90 text-primary-foreground px-4 py-2 rounded-md text-sm transition-colors">استفد الآن</a>
					</div>
				</div>
			))}
		</div>
		
		<!-- Newsletter Signup -->
		<div class="bg-muted rounded-lg p-8 text-center mb-12">
			<h2 class="text-2xl font-bold mb-4 text-foreground">لا تفوت أي عرض</h2>
			<p class="mb-6 max-w-2xl mx-auto text-muted-foreground">اشترك في نشرتنا الإخبارية للبقاء على اطلاع بأحدث العروض والصفقات الحصرية.</p>
			
			<form class="max-w-md mx-auto">
				<div class="flex flex-col sm:flex-row gap-4">
					<input 
						type="email" 
						placeholder="عنوان بريدك الإلكتروني" 
						class="flex-grow px-4 py-3 rounded-md border border-input bg-background text-foreground focus:outline-none focus:ring-2 focus:ring-primary"
						required
					/>
					<button 
						type="submit" 
						class="bg-primary hover:bg-primary/90 text-primary-foreground px-6 py-3 rounded-md font-medium transition-colors"
					>
						اشترك
					</button>
				</div>
				<p class="text-xs text-muted-foreground/70 mt-3">بالاشتراك، فإنك توافق على تلقي رسائل بريد إلكتروني تسويقية من سوباكوتو. يمكنك إلغاء الاشتراك في أي وقت.</p>
			</form>
		</div>
		
		<!-- Terms & Conditions -->
		<div class="bg-card rounded-lg shadow-md p-8">
			<h2 class="text-2xl font-bold mb-4 text-primary">الشروط والأحكام</h2>
			<div class="prose max-w-none text-muted-foreground">
				<p class="mb-4">
					تخضع جميع العروض للشروط والأحكام التالية:
				</p>
				<ul class="list-disc pr-5 rtl:pr-5 rtl:pl-0 space-y-2 mb-4">
					<li>لا يمكن الجمع بين العروض وأي عرض ترويجي أو خصم آخر ما لم يُذكر ذلك صراحةً.</li>
					<li>يجب ذكر رموز العروض الترويجية وقت الحجز للاستفادة من الخصم.</li>
					<li>تحتفظ سوباكوتو بالحق في تعديل أو إلغاء أي عرض ترويجي دون إشعار مسبق.</li>
					<li>العروض صالحة فقط للمدة المحددة وقد تخضع للتوافر.</li>
					<li>قد تنطبق شروط إضافية على عروض محددة كما هو موضح في أوصافها.</li>
				</ul>
				<p>
					لأي أسئلة بخصوص عروضنا الترويجية، يرجى <a href={getRelativeLocaleUrl(currentLang, 'contact')} class="text-primary hover:text-primary/80">التواصل معنا</a>.
				</p>
			</div>
		</div>
	</section>
</Layout>
