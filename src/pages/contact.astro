---
import Layout from '../layouts/Layout.astro';

// Contact form fields
const formFields = [
  { id: "name", label: "Full Name", type: "text" as const, placeholder: "Your full name", required: true },
  { id: "email", label: "Email Address", type: "email" as const, placeholder: "your.email@example.com", required: true },
  { id: "phone", label: "Phone Number", type: "tel" as const, placeholder: "Your phone number", required: false },
  { id: "subject", label: "Subject", type: "text" as const, placeholder: "How can we help you?", required: true },
];

// Contact information
const contactInfo = {
  phone: "+1 (555) 123-4567",
  email: "info@supakoto.com",
  address: "123 Main Street, Downtown, City, Country",
  hours: "Monday - Friday: 9:00 AM - 6:00 PM"
};

// Office locations
const offices = [
  {
    name: "Headquarters",
    address: "123 Main Street, Downtown, City",
    phone: "+1 (555) 123-4567"
  },
  {
    name: "Westside Office",
    address: "456 West Avenue, Westside, City",
    phone: "+1 (555) 234-5678"
  },
  {
    name: "Eastside Office",
    address: "789 East Boulevard, Eastside, City",
    phone: "+1 (555) 345-6789"
  }
];
---

<Layout title="Contact Us">
	<section class="py-12">
		<div class="text-center mb-12">
			<h1 class="text-4xl md:text-5xl font-bold text-foreground mb-4">Contact Us</h1>
			<p class="text-xl text-muted-foreground max-w-3xl mx-auto">We'd love to hear from you. Get in touch with our team.</p>
		</div>
		
		<div class="grid grid-cols-1 lg:grid-cols-2 gap-12 mb-12">
			<!-- Contact Form -->
			<div class="bg-card rounded-lg shadow-md p-8">
				<h2 class="text-2xl font-bold mb-6 text-primary">Send us a Message</h2>
				
				<form id="contact-form" class="space-y-6">
					{formFields.map(field => (
						<div>
							<label for={field.id} class="block text-foreground font-medium mb-2">{field.label} {field.required && <span class="text-destructive">*</span>}</label>
							<input 
								type={field.type} 
								id={field.id} 
								name={field.id} 
								placeholder={field.placeholder} 
								class="w-full px-4 py-3 rounded-md border border-input bg-background text-foreground focus:outline-none focus:ring-2 focus:ring-primary"
								required={field.required}
							/>
						</div>
					))}
					
					<div>
						<label for="message" class="block text-foreground font-medium mb-2">Message <span class="text-destructive">*</span></label>
						<textarea 
							id="message" 
							name="message" 
							rows="5" 
							placeholder="Please provide details about your inquiry..." 
							class="w-full px-4 py-3 rounded-md border border-input bg-background text-foreground focus:outline-none focus:ring-2 focus:ring-primary"
							required
						></textarea>
					</div>
					
					<div class="flex items-start">
						<input 
							type="checkbox" 
							id="privacy-policy" 
							name="privacy-policy" 
							class="mt-1"
							required
						/>
						<label for="privacy-policy" class="ml-2 text-sm text-muted-foreground">
							I agree to the <a href="/privacy" class="text-primary hover:text-primary/80">Privacy Policy</a> and consent to being contacted regarding my inquiry.
						</label>
					</div>
					
					<div>
						<button 
							type="submit" 
							class="bg-primary hover:bg-primary/90 text-primary-foreground px-6 py-3 rounded-md font-medium transition-colors w-full"
						>
							Submit Message
						</button>
					</div>
				</form>
			</div>
			
			<!-- Contact Information -->
			<div>
				<!-- General Contact Info -->
				<div class="bg-card rounded-lg shadow-md p-8 mb-8">
					<h2 class="text-2xl font-bold mb-6 text-primary">Contact Information</h2>
					
					<div class="space-y-4">
						<div class="flex items-start">
								<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-primary mr-3 mt-0.5">
								<path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
							</svg>
							<div>
								<h3 class="font-semibold text-card-foreground">Phone</h3>
								<p class="text-muted-foreground">{contactInfo.phone}</p>
							</div>
						</div>
						
						<div class="flex items-start">
								<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-primary mr-3 mt-0.5">
								<path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
							</svg>
							<div>
								<h3 class="font-semibold text-card-foreground">Email</h3>
								<p class="text-muted-foreground">{contactInfo.email}</p>
							</div>
						</div>
						
						<div class="flex items-start">
								<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-primary mr-3 mt-0.5">
								<path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
								<path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
							</svg>
							<div>
								<h3 class="font-semibold text-card-foreground">Address</h3>
								<p class="text-muted-foreground">{contactInfo.address}</p>
							</div>
						</div>
						
						<div class="flex items-start">
								<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-primary mr-3 mt-0.5">
								<path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
							</svg>
							<div>
								<h3 class="font-semibold text-card-foreground">Business Hours</h3>
								<p class="text-muted-foreground">{contactInfo.hours}</p>
							</div>
						</div>
					</div>
				</div>
				
				<!-- Map Placeholder -->
				<div class="bg-muted h-64 rounded-lg mb-8 flex items-center justify-center">
					<div class="text-center">
						<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-12 h-12 mx-auto text-muted-foreground mb-2">
							<path stroke-linecap="round" stroke-linejoin="round" d="M9 6.75V15m6-6v8.25m.503 3.498l4.875-2.437c.381-.19.622-.58.622-1.006V4.82c0-.836-.88-1.38-1.628-1.006l-3.869 1.934c-.317.159-.69.159-1.006 0L9.503 3.252a1.125 1.125 0 00-1.006 0L3.622 5.689C3.24 5.88 3 6.27 3 6.695V19.18c0 .836.88 1.38 1.628 1.006l3.869-1.934c.317-.159.69-.159 1.006 0l4.994 2.497c.317.158.69.158 1.006 0z" />
						</svg>
						<p class="text-muted-foreground font-medium">Interactive Map Coming Soon</p>
					</div>
				</div>
				
				<!-- Office Locations -->
				<div class="bg-card rounded-lg shadow-md p-8">
					<h2 class="text-2xl font-bold mb-6 text-primary">Our Offices</h2>
					
					<div class="grid grid-cols-1 md:grid-cols-3 gap-4">
						{offices.map(office => (
							<div class="p-4 border border-border rounded-lg bg-card/50">
								<h3 class="font-semibold text-card-foreground mb-2">{office.name}</h3>
								<p class="text-muted-foreground text-sm mb-2">{office.address}</p>
								<p class="text-muted-foreground text-sm">{office.phone}</p>
							</div>
						))}
					</div>
				</div>
			</div>
		</div>
		
		<!-- FAQ Section -->
		<div class="bg-muted rounded-lg p-8 text-center">
			<h2 class="text-2xl font-bold mb-4 text-foreground">Frequently Asked Questions</h2>
			<p class="mb-6 max-w-2xl mx-auto text-muted-foreground">Find quick answers to common questions about our services.</p>
			<a href="/faq" class="bg-primary hover:bg-primary/90 text-primary-foreground px-6 py-3 rounded-md font-medium transition-colors">View FAQ</a>
		</div>
	</section>
</Layout>

<script>
	// Simple form validation and submission handling
	document.addEventListener('DOMContentLoaded', () => {
		const contactForm = document.getElementById('contact-form') as HTMLFormElement;
		
		if (contactForm) {
			contactForm.addEventListener('submit', (e) => {
				e.preventDefault();
				
				// In a real implementation, you would send the form data to a server
				// For this placeholder, we'll just show an alert
				alert('Thank you for your message! This is a placeholder form. In a real implementation, your message would be sent to our team.');
				
				// Reset the form
				contactForm.reset();
			});
		}
	});
</script>
