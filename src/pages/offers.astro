---
import Layout from '../layouts/Layout.astro';

// Placeholder offers data
const offers = [
  {
    id: 1,
    title: "Summer Special",
    discount: "20% Off",
    description: "Get 20% off on all our premium services throughout the summer season.",
    validUntil: "September 30, 2025",
    code: "SUMMER20"
  },
  {
    id: 2,
    title: "New Customer Discount",
    discount: "15% Off",
    description: "First-time customers receive 15% off their initial service booking.",
    validUntil: "No expiration",
    code: "NEWCLIENT15"
  },
  {
    id: 3,
    title: "Bundle Package",
    discount: "Save 25%",
    description: "Book any three services together and save 25% on the total cost.",
    validUntil: "December 31, 2025",
    code: "BUNDLE25"
  },
  {
    id: 4,
    title: "Referral Reward",
    discount: "10% Off",
    description: "Refer a friend and both of you receive 10% off your next booking.",
    validUntil: "No expiration",
    code: "REFERRAL10"
  }
];
---

<Layout title="Special Offers">
	<section class="py-12">
		<div class="text-center mb-12">
			<h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">Special Offers</h1>
			<p class="text-xl text-gray-600 max-w-3xl mx-auto">Take advantage of our limited-time promotions and discounts</p>
		</div>
		
		<!-- Offers Overview -->
		<div class="bg-white rounded-lg shadow-md p-8 mb-12">
			<h2 class="text-3xl font-bold mb-6 text-blue-800">Current Promotions</h2>
			<p class="text-gray-600 mb-6">
				At Supakoto, we're committed to providing exceptional value. Check out our current offers below and don't miss out on these opportunities to save.
			</p>
		</div>
		
		<!-- Featured Offer -->
		<div class="bg-gradient-to-r from-blue-600 to-blue-800 text-white rounded-lg p-8 mb-12">
			<div class="md:flex items-center">
				<div class="md:w-2/3 mb-6 md:mb-0 md:pr-8">
					<span class="inline-block bg-yellow-400 text-blue-900 font-bold px-4 py-1 rounded-full mb-4">FEATURED OFFER</span>
					<h3 class="text-3xl font-bold mb-4">Limited Time Promotion</h3>
					<p class="mb-6 text-lg">
						Book any premium service this month and receive a complimentary consultation session worth $150. 
						This exclusive offer is only available for a limited time.
					</p>
					<div class="flex flex-wrap gap-4">
						<a href="/contact" class="bg-white text-blue-800 hover:bg-gray-100 px-6 py-3 rounded-md font-medium transition-colors">Book Now</a>
						<a href="/services" class="bg-transparent hover:bg-blue-700 border border-white px-6 py-3 rounded-md font-medium transition-colors">View Services</a>
					</div>
				</div>
				<div class="md:w-1/3 flex justify-center">
					<div class="bg-white bg-opacity-20 p-6 rounded-lg text-center">
						<p class="text-sm mb-2">Use Code</p>
						<p class="text-3xl font-bold mb-2">PREMIUM50</p>
						<p class="text-sm">Valid until July 31, 2025</p>
					</div>
				</div>
			</div>
		</div>
		
		<!-- Offers Grid -->
		<div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
			{offers.map(offer => (
				<div class="bg-white p-6 rounded-lg shadow-md border border-gray-100">
					<div class="flex justify-between items-start mb-4">
						<h3 class="text-2xl font-semibold text-blue-800">{offer.title}</h3>
						<span class="bg-blue-100 text-blue-800 font-bold px-3 py-1 rounded-md">{offer.discount}</span>
					</div>
					
					<p class="text-gray-600 mb-6">{offer.description}</p>
					
					<div class="bg-gray-50 p-4 rounded-md mb-6">
						<div class="flex justify-between items-center">
							<div>
								<p class="text-sm text-gray-500 mb-1">Promo Code:</p>
								<p class="font-mono font-bold text-lg">{offer.code}</p>
							</div>
							<button class="text-blue-600 hover:text-blue-800 text-sm font-medium">Copy Code</button>
						</div>
					</div>
					
					<div class="flex justify-between items-center">
						<p class="text-sm text-gray-500">Valid until: <span class="font-medium">{offer.validUntil}</span></p>
						<a href="/contact" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md text-sm transition-colors">Redeem Now</a>
					</div>
				</div>
			))}
		</div>
		
		<!-- Newsletter Signup -->
		<div class="bg-gray-100 rounded-lg p-8 text-center mb-12">
			<h2 class="text-2xl font-bold mb-4">Never Miss an Offer</h2>
			<p class="mb-6 max-w-2xl mx-auto">Subscribe to our newsletter to stay updated on our latest promotions and exclusive deals.</p>
			
			<form class="max-w-md mx-auto">
				<div class="flex flex-col sm:flex-row gap-4">
					<input 
						type="email" 
						placeholder="Your email address" 
						class="flex-grow px-4 py-3 rounded-md border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-600"
						required
					/>
					<button 
						type="submit" 
						class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-md font-medium transition-colors"
					>
						Subscribe
					</button>
				</div>
				<p class="text-xs text-gray-500 mt-3">By subscribing, you agree to receive marketing emails from Supakoto. You can unsubscribe at any time.</p>
			</form>
		</div>
		
		<!-- Terms & Conditions -->
		<div class="bg-white rounded-lg shadow-md p-8">
			<h2 class="text-2xl font-bold mb-4 text-blue-800">Terms & Conditions</h2>
			<div class="prose max-w-none text-gray-600">
				<p class="mb-4">
					All offers are subject to the following terms and conditions:
				</p>
				<ul class="list-disc pl-5 space-y-2 mb-4">
					<li>Offers cannot be combined with any other promotion or discount unless explicitly stated.</li>
					<li>Promo codes must be mentioned at the time of booking to avail the discount.</li>
					<li>Supakoto reserves the right to modify or cancel any promotion without prior notice.</li>
					<li>Offers are valid only for the specified duration and may be subject to availability.</li>
					<li>Additional terms may apply to specific offers as indicated in their descriptions.</li>
				</ul>
				<p>
					For any questions regarding our promotions, please <a href="/contact" class="text-blue-600 hover:text-blue-800">contact us</a>.
				</p>
			</div>
		</div>
	</section>
</Layout>
