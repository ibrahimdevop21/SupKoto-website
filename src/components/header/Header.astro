---
// Main Astro entry point for the header. This wraps the React Header and provides region/locale context.
// All region logic is handled in the React component. Astro only provides initial props/context.
import HeaderComponent from './Header';
import { getCurrentLocale, isRTL } from '../../i18n/utils';
import { RegionProvider } from '../../context/RegionContext';

const lang = getCurrentLocale(Astro);
const rtl = isRTL(Astro);
---

<RegionProvider client:load>
  <HeaderComponent client:load currentLocale={lang} isRTL={rtl} />
</RegionProvider>
