  egypt: {
    address: currentLang === 'ar' ? 'أوتو مول، مدينة نصر، القاهرة، مصر' : 'Nasr City, Auto Mall, Cairo, Egypt',
    phone: '+20 100 456 7890'
  }
};

// Unified global social media links
